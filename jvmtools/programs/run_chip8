chip8_prog=$1
if [ -z $chip8_prog ]; then 
    echo "$0: missing arg 'chip8_prg'"
    exit 1
fi

./scc_chip8.sh  Chip8Emulator.scc $1
if [ $? -ne 0 ]; then
    echo error
    exit 1
fi

../../verilog/spamcc_sim.sh  1000 ../../verilog/cpu/demo_assembler_roms.v Chip8Emulator.scc.asm.rom
if [ $? -ne 0 ]; then
    echo error
    exit 1
fi
